<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.sweng.elezione.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>autenticazioneServlet</servlet-name>
    <servlet-class>com.sweng.elezione.server.AutenticazioneImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>elezioneServlet</servlet-name>
    <servlet-class>com.sweng.elezione.server.ElezioneImpl</servlet-class>
  </servlet>
  
  
  
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/swengprogetto/greet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>autenticazioneServlet</servlet-name>
    <url-pattern>/swengprogetto/autenticazione</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>elezioneServlet</servlet-name>
    <url-pattern>/swengprogetto/elezione</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SWENGProgetto.html</welcome-file>
  </welcome-file-list>

</web-app>
